@{
    ViewData["Title"] = "Notas Fiscais";
}

<div class="page-content-wrapper">
    <div class="page-content">
        <div class="page-bar">
            <div class="page-title-breadcrumb">
                <div class=" pull-left">
                    <div class="page-title">@ViewData["Title"]</div>
                </div>
                <ol class="breadcrumb page-breadcrumb pull-right">
                    <li>
                        <i class="fas fa-home"></i>&nbsp;<a class="parent-item" asp-action="Index" asp-controller="Home">Home</a>&nbsp;<i class="fas fa-angle-right"></i>
                    </li>
                    <li class="active">@ViewData["Title"]</li>
                </ol>
            </div>
        </div>
        <div class="col-sm-12">            
            <div class="card-box">
                <div class="card-head">
                    <header>Filtrar Por:</header>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-3 col-md-3 col-sm-6 col-12">
                            <div class="form-group">
                                <label class="form-label fw-bold">Status</label>
                                <select id="filtro_status" class="form-control">
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-3 col-sm-6 col-12">
                            <div class="form-group">
                                <label class="form-label fw-bold">Mês de Emissão</label>
                                <select id="filtro_mes_emissao" class="filtro_mes form-select">
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-3 col-sm-6 col-12">
                            <div class="form-group">
                                <label class="form-label fw-bold">Mês da Cobrança</label>
                                <select id="filtro_mes_cobranca" class="filtro_mes form-control">
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-3 col-sm-6 col-12">
                            <div class="form-group">
                                <label class="form-label fw-bold">Mês do Pagamento</label>
                                <select id="filtro_mes_pagamento" class="filtro_mes form-control">
                                </select>
                            </div>
                        </div>                        
                    </div>
                </div>
            </div>

            <div class="card-box">
                <div class="card-head">
                    <header>@ViewData["Title"]</header>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="col-md-6 col-sm-6 col-6">
                                <div class="btn-group">
                                    <a class="btn btn-info" asp-action="Create"><i class="fas fa-plus text-white"></i> Nova Nota Fiscal</a>
                                </div>
                            </div>
                        </div>
                        <div class="table-scrollable remove-border text-nowrap">
                            <table id="tb_notasFiscais" class="table">
                                <thead>
                                    <tr>
                                        <th> Data Emissão </th>
                                        <th> Nome Pagador </th>
                                        <th> Documento NF </th>
                                        <th> Valor </th>
                                        <th> Status </th>
                                        <th> Ação </th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
